# Arazzo Engine Cookbook - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Keys and Credentials
# =============================================================================

# Stripe API (for payment workflows)
STRIPE_API_KEY=sk_test_your_stripe_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# GitHub API (for repository workflows)
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# Slack API (for messaging workflows)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here

# Shopify API (for e-commerce workflows)
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_SHOP_DOMAIN=your-store.myshopify.com

# Twilio API (for SMS/voice workflows)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid API (for email workflows)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# =============================================================================
# OAuth2 Configuration
# =============================================================================

# OAuth2 Client Credentials (for OAuth2 flows)
OAUTH_CLIENT_ID=your_oauth_client_id_here
OAUTH_CLIENT_SECRET=your_oauth_client_secret_here
OAUTH_REDIRECT_URI=http://localhost:8080/callback

# =============================================================================
# Arazzo Runner Configuration
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
ARAZZO_LOG_LEVEL=INFO

# Request timeout in seconds
ARAZZO_TIMEOUT=30

# Retry configuration
ARAZZO_MAX_RETRIES=3
ARAZZO_RETRY_DELAY=1

# =============================================================================
# Generator Configuration (for future generator recipes)
# =============================================================================

# OpenAI API (for AI-powered workflow generation)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4

# =============================================================================
# Database Configuration (for advanced recipes)
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/arazzo_db

# Redis
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Monitoring and Observability
# =============================================================================

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=arazzo-engine-cookbook

# Prometheus
PROMETHEUS_PORT=9090

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode
DEBUG=false

# Mock API responses (for testing without real API keys)
USE_MOCK_APIS=false