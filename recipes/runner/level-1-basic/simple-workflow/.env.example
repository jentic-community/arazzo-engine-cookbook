# Simple Workflow Recipe - Environment Variables
# This recipe uses the public JSONPlaceholder API which requires no authentication

# =============================================================================
# Arazzo Runner Configuration
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
ARAZZO_LOG_LEVEL=INFO

# Request timeout in seconds
ARAZZO_TIMEOUT=30

# =============================================================================
# Optional: For Testing with Mock APIs
# =============================================================================

# Set to 'true' to use mock API responses instead of real API calls
USE_MOCK_APIS=false

# =============================================================================
# Optional: Custom API Base URL
# =============================================================================

# Override the default JSONPlaceholder API URL if needed
# JSONPLACEHOLDER_BASE_URL=https://jsonplaceholder.typicode.com

# =============================================================================
# Notes
# =============================================================================

# This recipe does not require any API keys or authentication.
# The JSONPlaceholder API is a free fake REST API for testing.
# 
# If you're adapting this recipe for a different API that requires
# authentication, add your API keys below:
#
# MY_API_KEY=your_api_key_here
# MY_API_SECRET=your_api_secret_here